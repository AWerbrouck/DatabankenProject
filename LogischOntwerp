
ToeristischeActiviteit( Regio:varchar,
                        Type:varchar,
                        OpeningstijdID:integer,
                        PrijsPerPersoon:integer,
                        Straat:varchar (NULL),
                        Postcode:integer,
                        Gemeente:varchar,
                        Huisnummer:integer (NULL),
                        Beschrijving:varchar (NULL),
                        Website:varchar (NULL),
                        Tel:varchar (NULL),
                        ToegankelijkheidsinfoID:integer)

    Primaire Sleutel: {Postcode, Naam}              
                        
                        
    Openingstijd( OpeningstijdID:Integer,
                Eindtijd:Integer,
                Starttijd:Integer,
                Datum:Date)
              
        Primaire Sleutel: {OpeningstijdID}


    Toegankelijkheidsinfo(  ToegankelijkheidsinfoID:integer,
                            AANVULLING NODIG)

        Primaire Sleutel: {ToegankelijkheidsinfoID}



Persoon(  Email:varchar,
          Voornaam:varchar,
          Achternaam:varchar)
          
    Primaire Sleutel: {Email}



Hotel(  Beschrijving:varchar (NULL),
        Sterren:varchar (NULL),
        MinPrijs:integer (NULL),
        Email:varchar (NULL),
        HotelID:integer,
        Naam:varchar,
        Regio:varchar,
        Gemeente:integer,
        Postcode:integer,
        Huisnummer:integer,
        Straat:varchar)
        
    Primaire Sleutel: {HotelID} 

#relaties

Persoon_ToeristischeActiviteit( PersoonsEmail:varchar,
                                ToeristischeActiviteitID)
    Primaire Sleutel: {PersoonsEmail, ToeristischeActiviteitID}
    Vreemde Sleutel:  ({PersoonsEmail -> persoon{email}},
                       {ToeristischeActiviteitID -> ToeristischeActiviteit{ AANVULLING NODIG }})



persoon_Hotel( PersoonsEmail:varchar,
               Hotel )