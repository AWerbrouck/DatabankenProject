
ToeristischeActiviteit( Regio:varchar,
                        Type:varchar,
                        O_ID:integer,
                        PrijsPerPersoon:integer,
                        Straat:varchar (NULL),
                        Postcode:integer,
                        Gemeente:varchar,
                        Huisnummer:integer (NULL),
                        Beschrijving:varchar (NULL),
                        Website:varchar (NULL),
                        Tel:varchar (NULL),
                        ToegankelijkheidsinfoID:integer)

    Primaire Sleutel: {Postcode, Naam}              
                        
                        
    Openingstijd( O_ID:integer,
                  Eindtijd:time,
                  Starttijd:time,
                  Datum:date)
              
        Primaire Sleutel: {O_ID}


    Toegankelijkheidsinfo(  T_ID:integer,
                            AANVULLING NODIG)

        Primaire Sleutel: {T_ID}



Persoon(  Email:varchar,
          Voornaam:varchar,
          Achternaam:varchar)
          
    Primaire Sleutel: {Email}



Hotel(  Beschrijving:varchar (NULL),
        Sterren:varchar (NULL),
        MinPrijs:integer (NULL),
        Email:varchar (NULL),
        HotelID:integer,
        Naam:varchar,
        Regio:varchar,
        Gemeente:integer,
        Postcode:integer,
        Huisnummer:integer,
        Straat:varchar)
        
    Primaire Sleutel: {H_ID} 

